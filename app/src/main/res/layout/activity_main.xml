<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bookworm.MainActivity">


    <EditText
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="center"
        tools:text="Search..." />

    <TextView
        android:id="@+id/no_connection_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/search_box"
        android:text="@string/no_connection_text"
        android:textAlignment="center" />


    <Spinner
        android:id="@+id/max_results_box"
        android:layout_width="150dp"
        android:layout_height="32dp"
        android:layout_below="@id/search_box"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:id="@id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/max_results_box"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:text="@string/search_text" />

</RelativeLayout>
